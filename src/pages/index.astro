---
import { Image } from 'astro:assets';

import Layout from '../layouts/Layout.astro';
import Prisliste from '../components/prisliste';

import hansenLarsen from '../images/hansenLarsen.png';
import hansen from '../images/H.png';
import larsen from '../images/L.png';
import biografien from '../images/presse/biografien_over_davidsen.png';
---

<Layout title='Bryggepraten.no'>
    <main class='p-4 mx-auto max-w-2xl grid gap-8'>
        <h2 class='text-center md:text-3xl'>Velkommen til Bryggepraten!</h2>
        <section class='grid md:grid-cols-3 my-8'>
            <figure class='hidden md:block'>
                <Image src={larsen} alt='Tegnig av Larsen' />
            </figure>
            <div class='flex flex-col justify-center'>
                <figure class='md:hidden'>
                    <Image src={hansenLarsen} alt='tegning av Hansen og Larsen' />
                </figure>
                <h3 class='py-4 font-semibold text-center md:text-right md:text-3xl'>
                    Hansens og Larsens forunderlige verden
                </h3>
                <p class='py-12 px-2 md:px-0 text-'>
                    Her finner du også informasjon om Bryggekanten forlag; et forlag som har gitt ut
                    blant annet Bryggepraten bøkene
                </p>
            </div>
            <figure class='hidden md:block'>
                <Image src={hansen} alt='Tegnig av Hansen' />
            </figure>
        </section>
        <section class='border border-dotted border-[#efb261] rounded-sm w-full'>
            <h4 class='p-2 text-sm bg-[#efb261] font-bold'>Siste nytt fra forlaget</h4>
            <article class='p-2 m-2'>
                <h2 class='text-center'>Bryggepraten i Avisa</h2>
                <Image
                    src={biografien}
                    alt='Avisutklipp fra Sandefjords Blad - artikkelen handler om'
                    loading='lazy'
                />
                <p>Da er den nye boka omtalt</p>
            </article>
        </section>
        <aside class='grid'>
            <Prisliste client:visible />
            <a
                href='/bryggebutikken'
                class='p-2 m-2 border text-center rounded-sm w-full md:w-36 justify-self-center md:justify-self-start shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 focus:ring-offset-gray-100 bg-[#efb261] text-black text-secondary hover:text-amber-100 hover:bg-yellow-900'
                >Bestill bøker her</a
            >
        </aside>
    </main>
</Layout>
