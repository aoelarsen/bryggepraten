---
import { Image } from 'astro:assets';

import biografien from '../images/presse/biografien_over_davidsen.png';
---

<section class='border border-dotted border-[#efb261] rounded-sm w-full'>
    <h4 class='p-2 text-sm bg-[#efb261] font-bold'>Siste nytt fra forlaget</h4>
    <article class='p-2 m-2'>
        <h2 class='text-center'>Bryggepraten i Avisa</h2>
        <figure>
            <Image
                src={biografien}
                alt='Avisutklipp fra Sandefjords Blad - artikkelen handler om'
                loading='lazy'
            />
            <figcaption>Da er den nye boka omtalt</figcaption>
        </figure>
    </article>
</section>
